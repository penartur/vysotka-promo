
mixin navBlock(image, url)
	.span4
		.thumbnail
			img(src=image)
			.caption
				block
				p: a.btn(href=url) Подробнее

extends layout

append navLinks
	+navLinks('/')

append body
	.hero-unit
		h1 Квартира в Пушкино, ЖК «Высотка»
		p
			:markdown
				Продаётся однокомнатная квартира общей площадью 75.2 метра
				с ремонтом и отделкой в Пушкино, 15км от МКАД,
				ЖК бизнес-класса «Высотка».
		p.lead
			:markdown
				Цена – **5 950 000** рублей.

		address
			:markdown
				**Пишите:** todo@todo.todo

		address
			:markdown
				**Звоните:** +7-todo-todo

	.row
		+navBlock('todo-flat.jpg', '/flat')
			p todo текст о квартире
		+navBlock('todo-building.jpg', '/building')
			p todo текст о здании
		+navBlock('todo-photos.jpg', '/photos')
			p todo текст о фотографиях
	br
	.row
		+navBlock('todo-contract.jpg', '/contract')
			p todo текст о договоре
		+navBlock('todo-faq.jpg', '/faq')
			p todo текст о часто задаваемых вопросах
		+navBlock('todo-links.jpg', '/links')
			p todo текст о ссылках
