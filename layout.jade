mixin navLinks(currentPath)
	+navLink(currentPath, '/', 'Главная')
	+navLink(currentPath, '/flat', 'О квартире')
	+navLink(currentPath, '/building', 'О доме')
	+navLink(currentPath, '/photos', 'Фотографии')
	+navLink(currentPath, '/contract', 'О договоре')
	+navLink(currentPath, '/faq', 'FAQ')
	+navLink(currentPath, '/links', 'Ссылки')

mixin meta(specificKeywords)
	meta(name='keywords', content=['Пушкино Высотка', 'Квартира в Пушкино', 'Квартира в Высотке', '50 лет Комсомола 49', 'Купить квартиру в Пушкино', 'Купить квартиру в Высотке'].concat(specificKeywords || []).join(', '))

mixin yandexPhoto(galleryId, title, yandexSrc, size)
	a.fancybox.thumbnail(data-fancybox-group=(galleryId || 'default')+'Gallery', href=yandexSrc+'_XXXL.jpg', title=title)
		img.img-rounded(src=yandexSrc+'_' + (size || 'M') + '.jpg')

mixin yandexPhotoS(galleryId, title, yandexSrc)
	+yandexPhoto(galleryId, title, yandexSrc, 'S')

mixin bootstrap
	link(rel='stylesheet', type='text/css', href='http://twitter.github.com/bootstrap/assets/css/bootstrap.css')
	style(type='text/css').
		body {
			padding-top: 60px;
			padding-bottom: 40px;
		}
	link(rel='stylesheet', type='text/css', href='http://twitter.github.com/bootstrap/assets/css/bootstrap-responsive.css')

mixin jquery
	script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js')
	
mixin fancybox
	script(type='text/javascript', src='http://fancyapps.com/fancybox/lib/jquery.mousewheel-3.0.6.pack.js')
	script(type='text/javascript', src='http://fancyapps.com/fancybox/source/jquery.fancybox.pack.js?v=2.1.3')
	link(rel='stylesheet', type='text/css', href='http://fancyapps.com/fancybox/source/jquery.fancybox.css?v=2.1.3')
	link(rel='stylesheet', type='text/css', href='http://fancyapps.com/fancybox/source/helpers/jquery.fancybox-buttons.css?v=2.1.3')
	script(type='text/javascript', src='http://fancyapps.com/fancybox/source/helpers/jquery.fancybox-buttons.js?v=2.1.3')
	link(rel='stylesheet', type='text/css', href='http://fancyapps.com/fancybox/source/helpers/jquery.fancybox-thumbs.css?v=2.1.3')
	script(type='text/javascript', src='http://fancyapps.com/fancybox/source/helpers/jquery.fancybox-thumbs.js?v=2.1.3')
	script(type='text/javascript', src='http://fancyapps.com/fancybox/source/helpers/jquery.fancybox-media.js?v=1.0.0')
	script(type='text/javascript')
		$(document).ready(function () { $(".fancybox").fancybox(); });

mixin navLink(currentPath, path, text)
	li(class = (path == currentPath) && 'active'): a(href=path) #{text}

